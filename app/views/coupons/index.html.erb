<h1>Coupons</h1>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Percent Off</th>
      <th>Duration</th>
      <th>Promotion Codes</th>
    </tr>
  </thead>
  <tbody>
    <% @coupons.each do |coupon| %>
      <tr>
        <td><%= coupon.name %></td>
        <td><%= coupon.percent_off %>%</td>
        <td><%= coupon.duration %></td>
        <td>
          <ul>
            <% @promotion_codes[coupon.id].each do |promotion_code| %>
              <li><%= promotion_code.code %></li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

