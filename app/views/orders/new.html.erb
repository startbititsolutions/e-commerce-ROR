<%= form_for(@order) do |f| %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name, required: true, autofocus: true %>
    </p>
    <p>
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </p>
    <p>
      <%= f.label :address %><br>
      <%= f.text_area :address %>
    </p>
    <p>
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </p>
  <p>
  <%= f.label :country %><br>
  <%= f.text_field :country %>
</p>
<p>
  <%= f.label :pincode %><br>
  <%= f.number_field :pincode %>
</p>

<p>
<%= f.label :note %><br>
<%= f.text_area :note %>
</p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
