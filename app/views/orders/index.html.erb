<h1>Orders#index</h1>
<p>Find me in app/views/orders/index.html.erb</p>
<div class="container">
  <h2>All Orders</h2>

  <% @orders.each do |order| %>
    <p>Name: <%= order.name %></p>
    <p>Email: <%= order.email %></p>
    <p>Line Items: </p>
    <ul>
      <% order.line_items.each do |item| %>
        <li>
          <%= item.quantity %> x <%= item.productdetail.product_title %>
          - Total: <%= number_to_currency(item.quantity * item.productdetail.price) %>
        </li>
      <% end %>
      <li>Total including shipping amount: <span><%= number_to_currency(@cart.sub_total + @shipping_amount) %></span></li>
    </ul>
  <% end %>
</div>
