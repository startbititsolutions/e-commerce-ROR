<!-- app/views/admin/coupons/edit.html.erb -->

<h1>Edit Coupon</h1>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_for(@coupon, url: admin_coupon_path(@coupon), method: :put) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Coupon Name' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :percent_off, 'Percent Off' %>
    <%= f.number_field :percent_off, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :duration, 'Duration' %>
    <%= f.select :duration, [['Once', 'once'], ['Forever', 'forever'], ['Multiple Months', 'repeating']], class: 'form-control' %>
  </div>

  <!-- Add other coupon attributes here -->

  <div class="actions">
    <%= f.submit 'Update Coupon', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Coupons', admin_coupons_path, class: 'btn btn-secondary' %>
