<div class="container">
<%= form_with(url: admin_coupons_path, method: 'post', local: true) do |form| %>

    <div class="form-group">
      <%= form.label :coupon_name, 'Coupon Name' %>
      <%= form.text_field :coupon_name, class: 'form-control', placeholder: 'Enter coupon name' %>
    </div>
    <div class="form-group">
      <%= form.label :promotion_code_namef, 'code' %>
      <%= form.text_field :promotion_code_name, class: 'form-control', placeholder: 'Enter coupon code' %>
    </div>
    <div class="form-group">
  <%= form.label :duration, 'Duration' %>
  <%= form.select :duration, [['Once', 'once'], ['Forever', 'forever'], ['Multiple Months', 'multiple_months']], {}, class: 'form-control' %>
</div
<div class="form-group">
      <%= form.label :percent_off, 'Percent Off' %>
      <%= form.number_field :percent_off, class: 'form-control', placeholder: 'Enter percent off' %>
    </div>

    <%= form.submit 'Create Coupon', class: 'btn btn-primary text-center  ' %>
  <% end %>
  










  
  
  <% if flash[:error] %>
    <p class="text-danger"><%= flash[:error] %></p>
  <% end %>
  </div>