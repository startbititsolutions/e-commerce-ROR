
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <%= search_form_for @search, url: admin_orders_path, method: :get, html: { style: "margin-top: 18px;" } do |f| %>
        <div class="form-group">
  
          <div class="input-group">
            <%= f.search_field :name_cont,placeholder:t('placeholders.search_customer_name'), class: "form-control" %>
            <div class="input-group-append">
  <%= f.button class: "btn btn-primary", type: "submit" do %>
    <i class="fas fa-search"></i>
  <% end %>
  <%= link_to 'English', admin_orders_path(locale: :en), class: "btn btn-link" %>
              <%= link_to 'Русский', admin_orders_path(locale: :ru), class: "btn btn-link" %>
</div>

          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div style="float: right;">
  <%= link_to discarded_order_admin_orders_path, class: "btn btn-sm btn-warning" do %>
    <i class="fas fa-trash"></i> 
  <% end %>
</div>
</div>



<div class="container" style="background-color:#f7f7f7;border-radius: 13px; width:1100px; overflow: scroll;">
<h2><%= t('admin.orders.index.order') %> </h2>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
      <th style='min-width: 150px;'>  <%= t('admin.orders.index.order_number') 
      %></th>

      <th style='min-width: 150px;'>
      <%= sort_link(@search, :name) do %>
        <span style='color: black;'><%= t '.name' %></span>
      <% end %>
    </th>
    
    <th style='min-width: 200px;'>
      <%= sort_link(@search, :created_at) do %>
        <span style='color: black;'><%= t '.created' %></span>
      <% end %>
    </th>
    
        <th style='min-width: 120px;'><%= t '.Total' %></th>
        <th><%= t '.item' %></th>
        
        <th style='min-width: 150px;'>
  <%= sort_link(@search, :status) do %>
    <span style='color: blue;'><%= t '.status' %> </span>
  <% end %>
</th>

        <th style='min-width:190px'><%= t '.fullfillment' %></th>
        <th > <%= t '.action'%> </th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% total_items = 0 %>
        <% total_products = 0 %>
        <tr>
          
          <td>
         
          <%= order.id %>
        </td>
        
          <td><%= order.name %></td>
      
          <td><%= order.created_at.localtime.strftime("%A, %e %B %Y %I:%M %p") %></td>


          <td>
          <%= link_to admin_order_path(order, locale: I18n.locale), style: "color: green;" do %>
            <%= number_to_currency(order.total_amount, unit: "$") %>
          <% end %>
          
        </td>
        
        <td>
  <% total_items = 0 %>
  <% total_products = 0 %>
  <% order.line_items.each do |item| %>
    <% total_items += item.quantity %>
    <% total_products += 1 %>
  <% end %>

  <%= "#{total_items} " %>
  <%= link_to "#", class: "text-red", data: { toggle: "modal", target: "#orderDetailsModal#{order.id}" } do %>
    <i class='fas fa-eye'></i>
  <% end %>


</td>

        
            <td style="color: <%= order.status ? 'green' : 'red' %>;">
            <%= order.status ? 'Paid' : 'Unpaid' %>
            </td>

          <td> <%= order.fullfillment %> </td>
          <th>
          <%= link_to admin_order_path(order,locale: I18n.locale), class: "btn btn-sm btn-info" do %>
            <i class="fas fa-eye"></i> 
          <% end %>
        </th>
        <th>
          <%= link_to edit_admin_order_path(order,locale: I18n.locale), class: "btn btn-sm btn-warning" do %>
            <i class="fas fa-edit"></i> 
          <% end %>
        </th>
        <th>
          <%= link_to admin_order_path(order,locale: I18n.locale), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: 'Are you sure you want to discard this order?' } do %>
            <i class="fas fa-trash-alt"></i> 
          <% end %>
        </th>
        
    



        </tr>
        <%= render 'order_details', order: order %>
      <% end %>
    </tbody>
  </table>
</div>
</div>


