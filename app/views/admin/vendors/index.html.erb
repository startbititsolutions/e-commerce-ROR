<span class="text-end">
  <%= link_to 'New Vendor', new_admin_vendor_path, class: 'btn btn-success float-right mt-1 mr-1' %>
</span>
<h1>Vendors</h1>




<div class="container" style="background-color:#f7f7f7;border-radius: 13px; width:1100px; overflow: scroll;">
 <table  class="table table-hover">
    <thead>
        <tr>
        <th>company name</th>
        <th>first_name</th>
            <th>last_name</th>
            <th>email</th>
            <th>telephone</th>
            <th>address</th>
        <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @vendors.each do |vendor| %>
        <tr>
            <td><%= vendor.company_name %></td>
            <td><%= vendor.first_name %></td>
                <td><%= vendor.last_name %></td>
            <td><%= vendor.email %></td>
            <td><%= vendor.telephone %></td>

            <td><%= vendor.address %></td>
       
            
        

         
          <td><%= link_to edit_admin_vendor_path(vendor) do %>
            <i class="fas fa-edit"></i>
          <% end %></td>
            <%#= link_to 'Delete', vendor, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
        <% end %>
    </tbody>
 </table>
</div>

