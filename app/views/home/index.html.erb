                                <h5>+65 11.188.888</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                    <div class="hero__item set-bg" data-setbg="img/hero/banner.jpg">
                   

                        <div class="hero__text">
                            <span>Best Product</span>
                            <h2>Clothes <br />100% Cotton</h2>
                            <p>Free Pickup and Delivery Available</p>
                            <%= link_to products_path, class: "primary-btn", data: { turbolinks: false } do %>
                                SHOP NOW
                              <% end %>
                              
                    
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Categories Section Begin -->
    <section class="categories">
        <div class="container">
            <div class="row">
                <div class="categories__slider owl-carousel owl-carousel1">
                <% @productdetails.includes(:vendor).take(5).each do |productdetail| %>
                    <div class="col-lg-3">
                    <% if productdetail.images.attached? && productdetail.feature_image.present? %>
                    <% image_url = url_for(productdetail.feature_image) %>
                  <% else %>
                    <% if productdetail.images.attached? %>
                      <% image_url = url_for(productdetail.images.first) %>
                    <% else %>
                      <% image_url = asset_path('avtar1.png') %>
                    <% end %>
                  <% end %>
                    <div class="categories__item set-bg" data-setbg="<%= image_url %>">
                            <h5><a href="#">New Arrival</a></h5>
                        </div>
                    </div>

                    <% end %>
                    
                    
                    
                    
                </div>
            </div>
        </div>
    </section>
    <!-- Categories Section End -->

    <!-- Featured Section Begin -->
    <section class="featured spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h2>Featured Product</h2>
                    </div>
                    <div class="featured__controls">
                        <ul>
                           
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row featured__filter">
            
             <% @productdetails.includes(:vendor).each do |productdetail| %>
              <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                <div class="featured__item">
                  <% if productdetail.images.attached? && productdetail.feature_image.present? %>
                    <% image_url = url_for(productdetail.feature_image) %>
                  <% else %>
                    <% if productdetail.images.attached? %>
                      <% image_url = url_for(productdetail.images.first) %>
                    <% else %>
                      <% image_url = asset_path('avtar1.png') %>
                    <% end %>
                  <% end %>
                  <div class="featured__item__pic set-bg" data-setbg="<%= image_url %>">
                    <ul class="featured__item__pic__hover">
                      <li><a href="#"><i class="fa fa-heart"></i></a></li>
                     
                     
                      <% if productdetail.images.attached? %>
                      <li><%= link_to product_path(productdetail) , data: { turbolinks: false }  do %>
                        <i class="fa fa-shopping-cart"></i>
                      <% end %></li>
                    <% end %>

                    </ul>
                  </div>
                  <div class="featured__item__text">
                    <h6><%= productdetail.product_title %></h6>
                  
                    <h5 class="product-price" data-original-price="<%= productdetail.price %>"> $<%= productdetail.price %> </h5>
                  </div>
                </div>
              </div>
             <% end %>
            </div>
          
          
                
               
               
               
                
          
        </div>
    </section>
    <!-- Featured Section End -->

   

    <!-- Latest Product Section Begin -->
