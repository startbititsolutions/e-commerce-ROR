                                <% products_row.each do |product| %>
                                    <a href="<%= product_path(product) %>" class="latest-product__item" data-turbolinks="false">
                                    <div class="latest-product__item__pic">
                                        <% if product.images.attached? %>
                                        <%= image_tag product.images.first.variant(resize_to_limit: [100, 100]), style: "width:70px; height:100px;" %>
                                        <% else %>
                                        <%= image_tag 'avtar1.png', style: "width:70px; height:100px;" %>
                                        <% end %>
                                    </div>
                                    <div class="latest-product__item__text">
                                        <h6><%= product.product_title %></h6>
                                        <span>$<%= product.price %></span>
                                    </div>
                                    </a>
                                <% end %>
                                </div>
                            <% end %>
                            </div>
                        </div>
                    </div>
            
               
                </div>
        </div>
    </section>
    <!-- Latest Product Section End -->

   

   
