<h5> Thanks For order continue to shop</h1>
<%= link_to 'Save As PDF', success_path(format: :pdf), class: 'btn btn-primary float-right' %>


<section class=" " style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center ">
      <div class="col-lg-8 col-xl-6">
        <div class="card border-top border-bottom border-3" style="border-color: #f37a27 !important;">
          <div class="card-body p-5">

            <p class="lead fw-bold mb-5" style="color: #f37a27;">Order Details</p>

            <div class="row">
              <div class="col mb-3">
                <p class="small text-muted mb-1">Date</p>
                <p> <%= @order.created_at.localtime.strftime("%A, %e %B %Y ") %> </p>
              </div>
              <div class="col mb-3">
                <p class="small text-muted mb-1">Order No.</p>
                <p>#<%= @order.id %></p>
              </div>
            </div>

            <div class="mx-n5 px-5 py-4" style="background-color: #f2f2f2;">
             <% @order.line_items.each do |item| %>
                       
               <% if item.discount_id.present? %>
                  <div class="row mb-3">
                  <% if item.productdetail.images.attached? && item.productdetail.feature_image.present? %>
                     <% image_url = url_for(item.productdetail.feature_image) %>
                  <% else %>
                      <% if item.productdetail.images.attached? %>
                          <% image_url = url_for(item.productdetail.images.first) %>
                      <% else %>
                          <% image_url = asset_path('avtar1.png') %>
                      <% end %>
                  <% end %>
                  <div class="col-md-4 col-lg-4">
                  <% if image_url.present? %>
                      <%= link_to(product_path(item.productdetail), data: { turbolinks: false }) do %>
                          <img src="<%= image_url %>" alt="" style="width: 100px; height: 100px;">
                      <% end %>
                  <% end %>
                  </div>
                    <div class="col-md-4 col-lg-4">
                      <p><%= item.productdetail.product_title %> x <%= item.quantity %>
                    
                      </p>
                      <% discount = Discount.find(item.discount_id) %>
                      <p style="margin-top: -10px;"><i class="fas fa-tag">(<%= discount.code %>)</i></p>

                    </div>
                    <div class="col-md-4 col-lg-4">
                      <p>
                      <span style="text-decoration: line-through;"><%= number_to_currency(item.quantity * item.productdetail.price) %></span>
                      <span><%= number_to_currency(item.discount_item_price) %></span>
                      </p>
                  
                     
                    </div>
                  </div>
              <% else %>
                      <div class="row mb-3">
                      <% if item.productdetail.images.attached? && item.productdetail.feature_image.present? %>
                     <% image_url = url_for(item.productdetail.feature_image) %>
                  <% else %>
                      <% if item.productdetail.images.attached? %>
                          <% image_url = url_for(item.productdetail.images.first) %>
                      <% else %>
                          <% image_url = asset_path('avtar1.png') %>
                      <% end %>
                  <% end %>
                  <div class="col-md-4 col-lg-4">
                  <% if image_url.present? %>
                      <%= link_to(product_path(item.productdetail), data: { turbolinks: false }) do %>
                          <img src="<%= image_url %>" alt="" style="width: 100px; height: 100px;">
                      <% end %>
                  <% end %>
                  </div>
                        <div class="col-md-4 col-lg-4">
                          <p><%= item.productdetail.product_title %> x <%= item.quantity %></p>
                        </div>
                        <div class="col-md-4 col-lg-4">
                          <p><%= number_to_currency(item.quantity * item.productdetail.price) %></p>
                        </div>
                      </div>
              <% end %>

             <% end %>
            <!-- <div class="row">
            <div class="col-md-8 col-lg-9">
              <p class="mb-0">Shipping</p>
            </div>
            <div class="col-md-4 col-lg-3">
              <p class="mb-0">$40.00</p>
            </div>
          </div> -->
          
          </div>

            <div class="row my-4">
              <div class="col-md-6 offset-md-8 col-lg-7 offset-lg-9">
              <p class="lead fw-bold mb-0" style="color: #f37a27; margin-left:-43px"><span>Discount:<%= number_to_currency(@order.line_items.sum { |item| item.quantity * item.productdetail.price } - @total_amount_paid) %></span></p>
                <p class="lead fw-bold mb-0" style="color: #f37a27; margin-left:-43px"><span>Total: $<%= @total_amount_paid %></span></p>
              </div>
            </div>

            <p class="lead fw-bold mb-4 pb-2" style="color: #f37a27;">Tracking Order</p>

            <div class="row">
              <div class="col-lg-12">

                <div class="horizontal-timeline">

                  <ul class="list-inline items d-flex justify-content-between">
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">Ordered</p
                        class="py-1 px-2 rounded text-white" style="background-color: #f37a27;">
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded " >Shipped</p
                        class="py-1 px-2 rounded text-white" style="background-color: #e9e1db;">
                    </li>
                    <li class="list-inline-item items-list">
                      <p class="py-1 px-2 rounded " >On the way
                      </p>
                    </li>
                    <li class="list-inline-item items-list text-end" style="margin-right: 8px;">
                      <p style="margin-right: -8px;">Delivered</p>
                    </li>
                  </ul>

                </div>

              </div>
            </div>

            <p class="mt-4 pt-2 mb-0">Want to go back? <%= link_to "Continue", root_path, style: "color: #f37a27;", data: { turbolinks: false }  %></p>




          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
@media (min-width: 1025px) {
.h-custom {
height: 100vh !important;
}
}

.horizontal-timeline .items {
border-top: 2px solid #ddd;
}

.horizontal-timeline .items .items-list {
position: relative;
margin-right: 0;
}

.horizontal-timeline .items .items-list:before {
content: "";
position: absolute;
height: 8px;
width: 8px;
border-radius: 50%;
background-color: #ddd;
top: 0;
margin-top: -5px;
}

.horizontal-timeline .items .items-list {
padding-top: 15px;
}
</style>
