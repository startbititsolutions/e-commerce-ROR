

<section class="vh-100" style="background-color: #f4f5f7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-6 mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
           <div class="col-md-4 gradient-custom text-center text-white"
  style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
  <% if @customer.image.attached? %>
    <%= image_tag @customer.image, alt: "Avatar", class: "img-fluid my-5", style: "width: 80px;" %>
  <% else %>
    <%= image_tag "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp", alt: "Avatar", class: "img-fluid my-5", style: "width: 80px;" %>
  <% end %>
 <h6 ><%= @customer.name %></h6>
              <p>profile</p>
  
   <%= link_to edit_customer_profile_path(@customer) do %>
    <i class="fas fa-edit"></i>
          <% end %>
</div>

            <div class="col-md-8">
              <div class="card-body p-4">
                <h6>Information</h6>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted"><%= @customer.email %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Name</h6>
                   
                    <p class="text-muted">  <%= @customer.name   %></p>
                  </div>
                   <div class="col-6 mb-3">
  

                </div>
                <%# if user.image.attached? %>
                  
                <%# else %>
                  <!-- Display a default image or placeholder -->
                <%# end %>
            
               
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
    .gradient-custom {
/* fallback for old browsers */
background: #f6d365;

/* Chrome 10-25, Safari 5.1-6 */
