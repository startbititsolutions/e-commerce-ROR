    </header>
    <!-- Header Section End -->

    <!-- Hero Section Begin -->
    <section class="hero hero-normal">
        <div class="container">
            <div class="row">
            <div class="col-lg-3">
            <div class="hero__categories">
              <div class="hero__categories__all">
                <i class="fa fa-bars"></i>
                <span>Vendors</span>
              </div>
              <ul>
                <% @vendors.each do |vendor| %>
                
                  <li>
                  <%= link_to vendor.first_name, product_vendor_path(vendor), data: { turbolinks: false } %>
                </li>
                

                <% end %>
              </ul>
            </div>
          </div>
          
                <div class="col-lg-9">
                    <div class="hero__search">
                    <div class="hero__search__form">
                    <form action="#">
                        
                    <%= search_form_for @q, url: products_path do |f| %>
                      <%= f.text_field :product_title_cont, placeholder: "What do you need" %>
                    
                      <%= f.submit "Search" %>
                    
                  <% end %>  
                    </form>
                </div>
                
                        <div class="hero__search__phone">
                            <div class="hero__search__phone__icon">
                                <i class="fa fa-phone"></i>
                            </div>
                            <div class="hero__search__phone__text">
                                <h5>+65 11.188.888</h5>
                                <span>support 24/7 time</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->
    <div class="container">
            <div class="row">
                      <% @products.each do |product| %>
                          <div class="col-lg-4 col-md-6 col-sm-6">
                          
                                  <div class="product__item">
                                  <% if product.images.attached? && product.feature_image.present? %>
                                  <% image_url = url_for(product.feature_image) %>
                              <% else %>
                                  <% if product.images.attached? %>
                                  <% image_url = url_for(product.images.first) %>
                                  <% else %>
                                  <% image_url = asset_path('avtar1.png') %>
                                  <% end %>
                              <% end %>
                                      <div class="product__item__pic set-bg" , data-setbg="<%= image_url %>" style= "width: 300px; height: 350px;">
                                          <ul class="product__item__pic__hover">
                                              <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                             
                                              <% if product.images.attached? %>
                                              <li><%= link_to product_path(product), data: { turbolinks: false } do %>
                                                <i class="fa fa-shopping-cart"></i>
                                              <% end %></li>
                                            <% end %>
                                          </ul>
                                      </div>
                                      <div class="product__item__text">
                                          <h6><a href="#"><%= product.product_title %></a></h6>
                                          <h5>$<%= product.price %> </h5>
                                      </div>
                                  </div>
                          
                          </div>
                      
                      <% end %>
                          
                      
          
            
            
          
          
          
            
            
            
        </div>
        </div>

