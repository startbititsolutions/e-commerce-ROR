                                  <%= radio_button_tag 'q[vendor_id_eq]', '', params.dig(:q, :vendor_id_eq).blank? %>
                                  All Vendors
                                </label>
                                <% @vendors.each_slice(2) do |vendors_slice| %>
                                  <div class="vendor-row">
                                    <% vendors_slice.each do |vendor| %>
